{
  // Limites para remoção de outliers na quantidade vendida
  "outlier_quantiles": {
    // Remove os 5% menores valores de QTD_SAIDA
    "lower": 0.05,
    // Remove os 5% maiores valores de QTD_SAIDA
    "upper": 0.95
  },

  // Data final para previsão de demanda (formato: AAAA-MM-DD)
  "forecast_end_date": "2026-12-31",

  // Tempo de reposição do estoque (em dias)
  "lead_time_days": 7,

  // Nível de serviço (quanto maior, maior o estoque de segurança)
  // 0.95 representa 95% de chance de não faltar produto
  "service_level": 0.95,

  // Configurações das médias móveis usadas como features para o modelo
  "moving_averages": {
    // Janela de 7 dias (média móvel curta)
    "window_7d": 7,
    // Janela de 30 dias (média móvel longa)
    "window_30d": 30
  },

  // Modelos de Machine Learning a serem usados para previsão
  "model_options": {
    // Usar Random Forest (recomendado para prever quantidades complexas)
    "use_random_forest": true,
    // Usar Regressão Linear (simples e rápido, pode servir como comparação)
    "use_linear_regression": true
  }
}
